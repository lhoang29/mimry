@model Mimry.ViewModels.MimSeqView

@{
    ViewBag.Title = "Details";
}

<div>
    @{
        var mimryHeader = new Mimry.ViewModels.MimryHeader() 
        {
            MimSeqID = Model.MimSeqID,
            Title = Model.Title,
            ReturnUrl = "/MimSeqs/Details/" + Model.MimSeqID,
            IsLiked = Model.IsLiked
        };
    }
    @Html.Partial("MimryHeader", mimryHeader)
	<hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                @{
                    foreach (var mim in Model.MimViews)
                    {
                        <div style="text-align:center">
                            @Html.Partial("Mim", mim)
                        </div>
                    }
                }
            </div>
            <div class="col-md-6">
                <h3>Comments:</h3>
                <textarea class="form-control" rows="3" placeholder="Enter something here..."></textarea>
            </div>
        </div>
    </div>
</div>