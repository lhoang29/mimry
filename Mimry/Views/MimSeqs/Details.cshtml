@model Mimry.ViewModels.MimSeqView

@{
    ViewBag.Title = "Details";
}

<div>
    @{
        var mimryHeader = new Mimry.ViewModels.MimryHeader() 
        {
            MimSeqID = Model.MimSeq.MimSeqID,
            Title = Model.MimSeq.Title,
            ReturnUrl = "/MimSeqs/Details/" + Model.MimSeq.MimSeqID,
            IsLiked = Model.IsLiked
        };
    }
    @Html.Partial("MimryHeader", mimryHeader)
	<hr />
    @{
        var sortedMims = Model.MimSeq.Mims.OrderBy(m => m.CreatedDate);
        foreach (var mim in sortedMims)
        {
            <div style="text-align:center">
                <a href="/Mims/Details/@mim.MimID">
                    <img class="mim-full" src="/Mims/Mimage/@mim.MimID?caption=true" />
                </a>
            </div>
        }
    }
</div>