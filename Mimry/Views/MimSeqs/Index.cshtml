@model IEnumerable<Mimry.Models.MimSeq>

@{
    ViewBag.Title = "Mimries";
}

<table class="table">
    @foreach (var item in Model)
    {
        @:<tr>
        var sortedMims = item.Mims.OrderBy(m => m.CreatedDate);
        foreach (var mim in sortedMims)
        {
            @:<td><a href="/Mims/Details/@mim.MimID"><img src="/Mims/Mimage/@mim.MimID?caption=true" style="max-width:300px; max-height:300px;" /></a></td>
        }
        <td>
            @Html.ActionLink("Continue this Mimry", "Edit", new { id = item.MimSeqID })
        </td>
        @:</tr>
    }
</table>