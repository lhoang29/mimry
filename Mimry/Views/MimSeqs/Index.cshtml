@model IEnumerable<Mimry.ViewModels.MimSeqView>

@{
    ViewBag.Title = "Mimry";
}

<div class="container-fluid">
    @foreach (var it in Model)
    {
        var item = it.MimSeq;
        var mimryHeader = new Mimry.ViewModels.MimryHeader() 
        { 
            MimSeqID = item.MimSeqID, 
            Title = item.Title, 
            ReturnUrl = "/MimSeqs/Index/",
            IsLiked = it.IsLiked
        };
        @Html.Partial("MimryHeader", mimryHeader)

        var sortedMims = item.Mims.OrderBy(m => m.CreatedDate);
        foreach (var mim in sortedMims)
        {
            <a href="/Mims/Details/@mim.MimID">
                <img class="img-rounded mim" src="/Mims/Mimage/@mim.MimID?caption=true"/>
            </a>
        }
        <br />
        <hr />
    }
</div>