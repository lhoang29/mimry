@using Mimry.ViewModels
@model MimryCommentView

<div class="row">
    <div>
        <h4>@Model.Value</h4>
    </div>
    <div class="text-muted">
        <div class="mr-comment-actions">
            @Html.Partial("MimryCommentActions", new MimryCommentActionsView() { 
                CommentID = Model.CommentID, 
                Vote = Model.Vote,
                ShowEdit = Model.ShowEdit
            })
        </div>
        @Model.User - <span class="datetime">@Model.LastModifiedDate</span>
    </div>
</div>